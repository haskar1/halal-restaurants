<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="sidebar col-sm-2">
        <%- include('../partials/sidebar'); %>
      </div>

      <div class="content col-sm-10">
        <h1><%= title %></h1>

        <form method="POST" action="">
          <div class="form-group">
            <label for="city">City:</label>
            <input id="city" class="form-control" type="text" placeholder="Name of City" name="city" value="<%= (typeof location === 'undefined' ? '' : location.city) %>" required>
          </div>
          <div class="form-group">
            <label for="state">State (optional):</label>
            <input id="state" class="form-control" type="text" placeholder="Name of State (optional)" name="state" value="<%= (typeof location === 'undefined' ? '' : location.state) %>">
          </div>
          <div class="form-group">
            <label for="country">Country:</label>
            <input id="country" class="form-control" type="text" placeholder="Name of Country" name="country" value="<%= (typeof location === 'undefined' ? '' : location.country) %>" required>
          </div>
          <button class="btn btn-primary" type="submit">Submit</button>
        </form>

        <% if (typeof errors !== 'undefined') { %>
          <ul>
            <% errors.forEach((error) => { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>

