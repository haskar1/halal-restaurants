<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="sidebar col-sm-2">
        <%- include('../partials/sidebar'); %>
      </div>

      <div class="content col-sm-10">
        <h1><%= title %>: <%= cuisine.name %></h1>

        <% if (cuisine_restaurants.length > 0) { %>

          <p><strong>Delete the following restaurants before attempting to delete this cuisine.</strong></p>

          <div style="margin-left: 20px; margin-top: 20px">
            <h4>Restaurants</h4>
            <dl>
              <% cuisine_restaurants.forEach(function(restaurant) { %>
                <dt>
                  <a href="<%= restaurant.url %>"><%= restaurant.name %></a>
                </dt>
                <dd><%= restaurant.summary %></dd>
              <% }); %>
            </dl>
          </div>

        <% } else { %>
          <p>Do you really want to delete this Cuisine?</p>
          <form method="POST" action="">
            <div class="form-group">
              <input id="cuisineid" class="form-control" type="hidden" name="cuisineid" required="true" value="<%= cuisine._id %>">
            </div>
            <button class="btn btn-primary" type="submit">Delete</button>
          </form>
        <% } %>

      </div>
    </div>
  </div>
</body>
</html>

